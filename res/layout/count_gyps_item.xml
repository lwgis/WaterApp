<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@drawable/field_item_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="3dp"
        android:text="名称"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/fspflTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="废水排放量"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/codzpTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="COD直排"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/codclTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="COD处理"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/codsumTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="总COD"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/adzpTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="氨氮直排"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/adclTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="氨氮处理"
        android:textColor="#715b4c"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@drawable/field_item_fgx"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/adsumTv"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="总氨氮"
        android:textColor="#715b4c"
        android:textSize="14sp" />

</LinearLayout>