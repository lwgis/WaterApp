<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f2eb" >
    <RelativeLayout 
	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:background="@drawable/title_bg">
	 <Button
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/newsbackbtn"
        android:textSize="15sp" />

   <cn.bjeastearth.waterapp.myview.MyTextButton
        android:id="@+id/btnSendPs"
        android:paddingTop="8dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="20sp"
        android:textColor="#eeeeee"
        android:text="上传" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/btnBack"
       android:layout_alignBottom="@+id/btnBack"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:paddingTop="3dp"
       android:shadowColor="#222222"
       android:shadowDy="-2"
       android:shadowRadius="2"
       android:text="新建种植污染源"
       android:textColor="#FFFFFF"
       android:textSize="20sp" />

	</RelativeLayout>
	<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layoutAddps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingBottom="30dp">
 		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="行政区域"
                android:textColor="#715b4c"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/field_item_fgx"
                android:scaleType="fitXY" />

            <Spinner
                android:id="@+id/regionSpin"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="#715b4c"
                android:textSize="16sp" 
                android:dropDownSelector="#ff0000"
                />
        </LinearLayout>
       
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="耕地面积"
                android:textColor="#715b4c"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/field_item_fgx"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/gdmjEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:paddingLeft="5dp"
              	android:inputType="numberDecimal"
                android:textColor="#715b4c"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="农药用量"
                android:textColor="#715b4c"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/field_item_fgx"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/nyylEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:paddingLeft="5dp"
              	android:inputType="numberDecimal"
                android:textColor="#715b4c"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="农肥用量"
                android:textColor="#715b4c"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/field_item_fgx"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/nfylEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:paddingLeft="5dp"
              	android:inputType="numberDecimal"
                android:textColor="#715b4c"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="农业产出"
                android:textColor="#715b4c"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/field_item_fgx"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/nyccEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:paddingLeft="5dp"
                android:textColor="#715b4c"
                android:textSize="18sp"
              	android:inputType="numberDecimal"
                 >
            </EditText>
        </LinearLayout>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="污染程度"
                android:textColor="#715b4c"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@drawable/field_item_fgx"
                android:scaleType="fitXY" />

            <Spinner
                android:id="@+id/wrcdSpin"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="#715b4c"
                android:textSize="16sp" 
                android:dropDownSelector="#ff0000"
                />
        </LinearLayout>

        
           <LinearLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
			   android:background="@drawable/field_item_bg"
               android:orientation="horizontal" >
                 <TextView
                   android:layout_width="100dp"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:padding="3dp"
                   android:text="地理位置"
                   android:textColor="#715b4c"
                   android:textSize="18sp" />

               <ImageView
                   android:layout_width="2dp"
                   android:layout_height="fill_parent"
                   android:background="@drawable/field_item_fgx"
                   android:scaleType="fitXY" />
               <LinearLayout 
                   android:layout_width="match_parent"
               	   android:layout_height="wrap_content"
                   android:orientation="horizontal">
              
               <LinearLayout 
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    android:layout_weight="1">
	               	<TextView 
	               	    android:id="@+id/xTv"
	               	    android:layout_width="match_parent"
	               	    android:layout_height="wrap_content"
	               	    android:textColor="#715b4c"
	               	    android:textSize="18sp"
	               	    android:text="X:"/>
	               	<TextView 
	               	    android:id="@+id/yTv"
	               	    android:layout_width="match_parent"
	               	    android:layout_height="wrap_content"
	               	    android:textColor="#715b4c"
	               	    android:textSize="18sp"
	               	    android:text="Y:"/>
	           </LinearLayout>
	           <Button
                   android:id="@+id/btnAddLocation"
                   android:layout_width="40dp"
                   android:layout_height="40dp"                   
                   android:background="@drawable/btn_location"
                   android:paddingLeft="5dp"
                   android:textColor="#715b4c"
                   android:layout_marginTop="3dp"
                   />
	            </LinearLayout>
           </LinearLayout>
       
    </LinearLayout>
</ScrollView>

</LinearLayout>
